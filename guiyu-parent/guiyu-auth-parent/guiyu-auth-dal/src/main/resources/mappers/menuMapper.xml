<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guiji.user.dao.MenuMapper">
	
	<insert id="insert">
		insert into sys_menu(name,description,url,permission,type,appid,remarks,create_time) 
		values(#{name},#{description},#{url},#{permission},#{type},#{appid},#{remarks},now())
	</insert>
	
	<update id="delete">
		update sys_menu set del_flag=1 , update_time=now() where id=#{id}
	</update>
	
	<update id="update">
		update sys_menu set name=#{name},description=#{description},url=#{url},
		permission=#{permission},type=#{type},appid=#{appid},remarks=#{remarks},update_time=now() 
		where id=#{id}
	</update>
	
	<select id="getMenuById" resultType="menu">
		select name,description,url,permission,type,appid,remarks 
		where id=#{id} and del_flag=0
	</select>
	
</mapper>

